<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite" parallel="tests" thread-count="3">

    <test name="Chrome Smoke">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.saucedemo.tests.AllTestsSuite"/>
        </classes>
    </test>

    <test name="Firefox Smoke">
        <parameter name="browser" value="firefox"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.saucedemo.tests.AllTestsSuite"/>
        </classes>
    </test>

    <test name="Edge Smoke">
        <parameter name="browser" value="edge"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.saucedemo.tests.AllTestsSuite"/>
        </classes>
    </test>

</suite>
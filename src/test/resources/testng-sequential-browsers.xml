<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Sequential Cross-Browser Tests" verbose="2">

    <!-- Test Suite Configuration -->
    <parameter name="browser" value="chrome"/>

    <!-- Chrome Tests (Runs First) -->
    <test name="Chrome Browser Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.saucedemo.tests.CrossBrowserTests">
                <methods>
                    <include name="testInvalidLogin"/>
                    <include name="testValidLogin"/>
                    <include name="testCompletePurchaseFlow"/>
                    <include name="testLogout"/>
                    <include name="testAddRemoveItemsFromCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Firefox Tests (Runs Second) -->
    <test name="Firefox Browser Tests" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.saucedemo.tests.CrossBrowserTests">
                <methods>
                    <include name="testInvalidLogin"/>
                    <include name="testValidLogin"/>
                    <include name="testCompletePurchaseFlow"/>
                    <include name="testLogout"/>
                    <include name="testAddRemoveItemsFromCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Edge Tests (Runs Third) -->
    <test name="Edge Browser Tests" preserve-order="true">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.saucedemo.tests.CrossBrowserTests">
                <methods>
                    <include name="testInvalidLogin"/>
                    <include name="testValidLogin"/>
                    <include name="testCompletePurchaseFlow"/>
                    <include name="testLogout"/>
                    <include name="testAddRemoveItemsFromCart"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>